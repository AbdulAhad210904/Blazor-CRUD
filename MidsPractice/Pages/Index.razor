@page "/"
@inject NavigationManager NavigationManager
<PageTitle>Index</PageTitle>

<h1>Hello, world!</h1>

Welcome to your new app.
<button type="submit" class="btn btn-primary" @onclick="ViewData">View Data</button>
<button type="submit" class="btn btn-primary" @onclick="FillForm">Fill Form</button>

@code {

    private async Task ViewData()
    {
        NavigationManager.NavigateTo("/formdata");
    }
    private async Task FillForm()
    {
        NavigationManager.NavigateTo("/userform");
    }
}
