@page "/form"
@page "/userform"
@using MidsPractice.DAL;
@using MidsPractice.Data;
@inject NavigationManager NavigationManager

<h3>User Form</h3>

<form >
    <div class="form-group">
        <label for="FirstName">First Name:</label>
        <input class="form-control" id="FirstName" @bind="userForm.FirstName" />
    </div>
    <div class="form-group">
        <label for="LastName">Last Name:</label>
        <input class="form-control" id="LastName" @bind="userForm.LastName" />
    </div>
    <div class="form-group">
        <label for="Email">Email:</label>
        <input class="form-control" id="Email" @bind="userForm.Email" />
    </div>
    <div class="form-group">
        <label for="Age">Age:</label>
        <input class="form-control" id="Age" @bind="userForm.Age" />
    </div>
    <div class="form-group">
        <label for="Country">Country:</label>
        <input class="form-control" id="Country" @bind="userForm.Country" />
    </div>
    <div class="form-group">
        <label for="Interests">Interests:</label>
        <input class="form-control" id="Interests" @bind="userForm.Interests" />
    </div>
    <div class="form-group">
        <label for="Comments">Comments:</label>
        <textarea class="form-control" id="Comments" @bind="userForm.Comments" rows="4"></textarea>
    </div>
    <button type="submit" class="btn btn-primary" @onclick="SubmitForm">Submit</button>
</form>

@code {
    private UserForm userForm = new UserForm();

    private async Task SubmitForm()
    {
        DALUserForm.SaveForm(userForm);
        // NavigationManager.NavigateTo("/thankyou");
    }
}

